      "viewOptions": {
        "controlButtons": "play_reset",
        "showVelocityVectors": true,
        "textBoxes": [
          {
            "text": "Piston wall",
            "x": 1.7465425109863282,
            "y": 1.43,
            "width": 0.5,
            "textAlign": "center",
            "layer": 1,
            "hostType": "RectangularObstacle",
            "hostIndex": 0
          }
