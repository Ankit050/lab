{
  "model": "/imports/legacy-mw-content/converted/sam-activities/gas-laws/original-interactives-in-pages/page2/page2$0.json",
  "components": [
    {
      "type": "button",
      "id": "abs-zero",
      "text": "Set to absolute zero",
      "action": "model.set({temperature: 0.00001});"
    },
    {
      "type": "button",
      "id": "add-heat",
      "text": "Add lots of heat",
      "action": [
        "var curTemp = model.get('temperature'), newTemp = curTemp + 2500;",
        "if (newTemp > 4000) {",
        "  newTemp = 4000;",
        "}",
        "model.set({temperature: newTemp});"
      ]
    },
    {
      "type": "button",
      "id": "subtract-heat",
      "text": "Subtract some heat",
      "action": [
        "var curTemp = model.get('temperature'), newTemp = curTemp - 500;",
        "if (newTemp < 1) {",
        "  newTemp = 1;",
        "}",
        "model.set({temperature: newTemp});"
      ]
    }
  ]
}
