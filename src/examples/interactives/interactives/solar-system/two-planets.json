{
  "title": "Testing: two planets",
  "publicationStatus": "draft",
  "subtitle": "Planet on left is 200x mass of planet on right; both have an initial X velocity of zero.",
  "about": "",
  "models": [
    {
      "id": "two-planets",
      "type": "solar-system",
      "url": "models/solar-system/two-planets.json",
      "viewOptions": {
        "controlButtons": "play_reset_step"
      }
    }
  ],
  "outputs": [
    {
      "name":  "numPlanets",
      "label": "Planets",
      "units": "count",
      "value": [
          "return getNumberOfPlanets();"
      ]
    }
  ],
  "components": [
    {
      "type": "button",
      "id": "add-random-planet",
      "text": "Add random planet",
      "action": "addRandomPlanet()"
    },
    {
      "type": "numericOutput",
      "id": "current-planets",
      "property": "numPlanets",
      "displayValue": "return format('f')(value)"
    },
    {
      "type": "text",
      "id": "wrapping-label",
      "text": "Model wrapping",
      "style": "header"
    },
    {
      "type": "checkbox",
      "id": "horizontal-wrapping",
      "text": "Horizontal",
      "property": "horizontalWrapping"
    },
    {
      "type": "checkbox",
      "id": "vertical-wrapping",
      "text": "Vertical",
      "property": "verticalWrapping"
    },
    {
      "type": "text",
      "id": "axes-label",
      "text": "Axes",
      "style": "header"
    },
    {
      "type": "checkbox",
      "id": "show-gridlines",
      "text": "Grid Lines",
      "property": "gridLines"
    },
    {
      "type": "checkbox",
      "id": "show-xunits",
      "text": "X units",
      "property": "xunits"
    },
    {
      "type": "checkbox",
      "id": "show-yunits",
      "text": "Y units",
      "property": "yunits"
    }
  ],
  "layout": {
    "right": [
      [ "add-random-planet" ],
      [ "current-planets" ],
      [ "wrapping-label" ],
      [ "horizontal-wrapping" ],
      [ "vertical-wrapping" ],
      [ "axes-label" ],
      [ "show-gridlines" ],
      [ "show-xunits" ],
      [ "show-yunits" ]
    ],
    "bottom": [
    ]
  },
  "template": [
    {
      "id": "right",
      "top": "1em",
      "left": "model.right",
      "padding-left": "0.5em",
      "align": "left"
    },
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom"
    }
  ]
}
