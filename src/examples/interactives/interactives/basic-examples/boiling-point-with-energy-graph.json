{
  "title": "Boiling Point with Energy Graph",
  "publicationStatus": "draft",
  "subtitle": "",
  "about": "",
  "models": [
    {
      "id": "boiling-point-with-clock$0",
      "url": "/imports/legacy-mw-content/converted/conversion-and-physics-examples/boiling-point-with-clock$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "modelTimeLabel": true
      },
      "onLoad": "set({ targetTemperature: 200 });"
    }
  ],
  "components": [
    {
      "type": "button",
      "id": "cool",
      "text": "Cool",
      "action": "adjustTemperature(0.9);"
    },
    {
      "type": "button",
      "id": "heat",
      "text": "Heat",
      "action": "adjustTemperature(1.1); limitHighTemperature(4000);"
    },
    {
      "type": "numericOutput",
      "id": "temperature-output",
      "property": "temperature",
      "displayValue": "return format('f')(value)"
    },
    {
      "type": "graph",
      "id": "propertiesGraph",
      "title": "Energy of the System (KE:red, PE:green, TE:blue)",
      "xlabel": "Model Time (ps)",
      "ylabel": "eV",
      "ymin": -15,
      "ymax": 15,
      "xmax": 30,
      "properties": [
        "kineticEnergy",
        "potentialEnergy",
        "totalEnergy"
      ]
    }
  ],
  "layout": {
    "right-graph": [ "propertiesGraph" ],
    "right-output": [ "temperature-output" ],
    "bottom": [
      "heat",
      "cool"
    ]
  },
  "template": [
    {
      "id": "right-graph",
      "left": "model.right",
      "height": "model.height * 0.8",
      "width": "model.height",
      "padding-left": "1em"
    },
    {
      "id": "right-output",
      "left": "model.right",
      "top": "model.bottom",
      "height": "3em",
      "width": "model.height",
      "padding-left": "1em"
    },
    {
      "id": "bottom",
      "top": "model.bottom",
      "width": "model.width",
      "padding-bottom": "1em"
    }
  ]
}