{
  "title": "Simple KE Shading",
  "about": "Interactive example",
  "model": {
    "url": "/imports/legacy-mw-content/converted/conversion-and-physics-examples/simple-ke-shading$0.json",
    "viewOptions": {
      "controlButtons": "play_reset"
    }
  },
  "components": [
    {
      "type": "button",
      "id": "ke-shading-on",
      "text": "Set KE Shading on",
      "action": "set({keShading: true})"
    },
    {
      "type": "button",
      "id": "ke-shading-off",
      "text": "Set KE Shading off",
      "action": "set({keShading: false})"
    },
    {
      "type": "button",
      "id": "mark-two-atoms",
      "text": "Mark two random atoms",
      "action": "markAtoms(randomAtoms(2))"
    },
    {
      "type": "button",
      "id": "unmark-all-atoms",
      "text": "Unmark all atoms",
      "action": "unmarkAllAtoms()"
    },
    {
      "type": "button",
      "id": "temperature-control-on",
      "text": "Set Temperature Control on",
      "action": "set({temperature_control: true})"
    },
    {
      "type": "button",
      "id": "temperature-control-off",
      "text": "Set Temperature Control off",
      "action": "set({temperature_control: false})"
    }
  ],
  "layout": {
    "bottom": [
      "ke-shading-on",
      "ke-shading-off",
      "mark-two-atoms",
      "unmark-all-atoms"
    ]
  }
}
