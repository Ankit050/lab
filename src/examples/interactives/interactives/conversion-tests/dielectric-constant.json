{
  "title": "Dielectric Constant",
  "publicationStatus": "public",
  "subtitle": "",
  "about": "",
  "models": [
    {
      "id": "dielectric-constant$0",
      "url": "/imports/legacy-mw-content/converted/conversion-and-physics-examples/dielectric-constant$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "modelTimeLabel": true
      },
      "onLoad": "setSolvent('oil');"
    }
  ],
  "outputs": [
    {
      "name": "particlesDistance",
      "value": [
        "return getAtomProperties(1).x - getAtomProperties(0).x;"
      ]
    },
    {
      "name": "effectiveDielectric",
      "value": [
        "var dC = get('dielectricConstant');",
        "var rDE = get('realisticDielectricEffect');",
        "var r = get('particlesDistance');",
        "if (rDE && r < 1.2) return 1 + (dC - 1)/(1 + Math.exp(-12 * r + 7));",
        "else return dC;"
      ]
    }
  ],
  "components": [
    {
      "type": "slider",
      "id": "dielectric-constant",
      "title": "Dielectric Constant",
      "min": 1,
      "max": 80,
      "steps": 80,
      "labels": [
        {
          "value": 1,
          "label": "vacuum"
        },
        {
          "value": 80,
          "label": "water"
        }
      ],
      "displayValue": "return format('1.2f')(value)",
      "property": "dielectricConstant"
    },
    {
      "type": "checkbox",
      "id": "realistic-dielectric-effect",
      "text": "Realistic Dielectric Effect",
      "property": "realisticDielectricEffect"
    },
    {
      "type": "pulldown",
      "id": "select-solvent",
      "options": [
        {
          "text": "Select the solvent type",
          "disabled": true,
          "selected": true
        },
        {
          "text": "vacuum",
          "action": "reset(); setSolvent('vacuum');"
        },
        {
          "text": "oil",
          "action": "reset(); setSolvent('oil');"
        },
        {
          "text": "water",
          "action": "reset(); setSolvent('water');"
        }
      ]
    },
    {
      "type": "graph",
      "id": "propertiesGraph",
      "title": "Effective Dielectric Constant vs Distance Between Particles",
      "xlabel": "time [ps]",
      "ylabel": "RED: distance [nm], GREEN: effective dielectric const [unitless]",
      "xmin": 0,
      "xmax": 20,
      "ymin": 0,
      "ymax": 11,
      "properties": [
        "particlesDistance",
        "effectiveDielectric"
      ]
    }
  ],
  "layout": {
    "rightwide": [
      "propertiesGraph"
    ]
  }
}