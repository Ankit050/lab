{
  "title": "Pendulum",
  "publicationStatus": "public",
  "subtitle": "",
  "about": "",
  "fontScale": 0.8,
  "models": [
    {
      "id": "pendulum1$0",
      "url": "/imports/legacy-mw-content/converted/inquiry-space/pendulum/pendulum1$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "gridLines": true,
        "showClock": false,
        "velocityVectors": {
          "length": 10
        }
      },
      "modelOptions": {
        "unitsScheme": "mks",
        "timeStepsPerTick": 167,
        "timeStep": 1,
        "modelSampleRate": 60
      },
      "onLoad": [
        "function resetAngle() {",
        "  set({startingAngle: get('startingAngle')});",
        "}",
        "function stopMotion() {",
        "  stop();",
        "  setAtomProperties(1, { vx: 0, vy: 0 });",
        "}",
        "onPropertyChange('rodLength', resetAngle);",
        "onPropertyChange('ballMass', resetAngle);",
        "onPropertyChange('gravitationalField', resetAngle);",
        "onPropertyChange('damping', resetAngle);",
        "onPropertyChange('startingAngle', stopMotion);"
      ]
    }
  ],
  "outputs": [
    {
      "name": "currentAngle",
      "unitAbbreviation": "&deg;",
      "label": "Current Angle",
      "value": [
        "var a0 = getAtomProperties(0),",
        "    a1 = getAtomProperties(1);",
        "return Math.atan((a1.x-a0.x)/(a0.y-a1.y)) * rad2deg;"
      ]
    }
  ],
  "parameters": [
    {
      "name": "rodLength",
      "onChange": "var len = value, a0 = getAtomProperties(0), a1 = getAtomProperties(1), angle = Math.atan((a1.x-a0.x)/(a0.y-a1.y)); setRadialBondProperties(0, { length: len }); setAtomProperties(1, {x: a0.x+Math.sin(angle)*len, y: a0.y-Math.cos(angle)*len, vx: 0, vy: 0});",
      "initialValue": 1.0
    },
    {
      "name": "startingAngle",
      "onChange": "var a0 = getAtomProperties(0), angle = value*deg2rad, len = getRadialBondProperties(0).length; setAtomProperties(1, {x: a0.x+Math.sin(angle)*len, y: a0.y-Math.cos(angle)*len, vx: 0, vy: 0});",
      "initialValue": 45
    },
    {
      "name": "ballMass",
      "onChange": "setElementProperties(3, { mass: value });",
      "initialValue": 1.5
    },
    {
      "name": "damping",
      "onChange": "setAtomProperties(1, { friction: value });",
      "initialValue": 0
    }
  ],
  "components": [
    {
      "type": "slider",
      "id": "gravity-slider",
      "min": 0.8,
      "max": 19.8,
      "displayValue": "return format('1.1f')(value)",
      "labels": [
        {
          "value": 1,
          "label": "1"
        },
        {
          "value": 20,
          "label": "20"
        }
      ],
      "steps": 38,
      "title": "Gravity (m/s²)",
      "property": "gravitationalField"
    },
    {
      "type": "slider",
      "id": "length-slider",
      "min": 0.2,
      "max": 2,
      "displayValue": "return format('1.1f')(value)",
      "labels": [
        {
          "value": 0.2,
          "label": "0.2"
        },
        {
          "value": 2,
          "label": "2.0"
        }
      ],
      "steps": 19,
      "title": "Rod Length (m)",
      "property": "rodLength"
    },
    {
      "type": "slider",
      "id": "angle-slider",
      "min": -45,
      "max": 45,
      "displayValue": "return format('f')(value)",
      "labels": [
        {
          "value": -45,
          "label": "-45&deg;"
        },
        {
          "value": 45,
          "label": "45&deg;"
        }
      ],
      "steps": 30,
      "title": "Starting Angle",
      "property": "startingAngle"
    },
    {
      "type": "slider",
      "id": "mass-slider",
      "min": 0.5,
      "max": 2.5,
      "displayValue": "return format('1.1f')(value)",
      "labels": [
        {
          "value": 0.5,
          "label": "0.5"
        },
        {
          "value": 2.5,
          "label": "2.5"
        }
      ],
      "steps": 19,
      "title": "Mass of the Ball (kg)",
      "property": "ballMass"
    },
    {
      "type": "slider",
      "id": "damping-slider",
      "min": 0,
      "max": 2,
      "displayValue": "return format('1.1f')(value)",
      "labels": [
        {
          "value": 0,
          "label": "0"
        },
        {
          "value": 2.0,
          "label": "2.0"
        }
      ],
      "steps": 20,
      "title": "Damping Force (Newton per m/s)",
      "property": "damping"
    },

    {
      "type": "checkbox",
      "id": "velocity-vectors",
      "text": "Show Velocity Vector?",
      "property": "showVelocityVectors"
    },
    {
      "type": "numericOutput",
      "id": "current-angle-display",
      "property": "currentAngle",
      "displayValue": "return format('f')(value)"
    },
    {
      "type": "numericOutput",
      "id": "time-display",
      "property": "time",
      "displayValue": "return format('1.2f')(value)"
    },
    {
      "type": "graph",
      "id": "propertiesGraph",
      "title": "Pendulum Angle (°)",
      "xlabel": "Time",
      "ylabel": "m",
      "ymin": -50,
      "ymax": 50,
      "xmax": 0.01,
      "xTicCount": 5,
      "xFormatter": "2.1e",
      "properties": [
        "currentAngle"
      ]
    }
  ],
  "layout": {
    "right": [
      "propertiesGraph"
    ],
    "bottom": [
      [
        "gravity-slider",
        "length-slider",
        "angle-slider"
      ],
      [
        "mass-slider",
        "damping-slider"
      ],
      [
        "velocity-vectors",
        "current-angle-display",
        "time-display"
      ]
    ]
  },
  "template": "wide-right"
}