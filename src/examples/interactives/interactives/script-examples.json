{
  "model": {
    "url": "/imports/legacy-mw-content/converted/potential-tests/static-coulomb-test/testingForces$0.json",
    "viewOptions": {
      "controlButtons": "play_reset"
    }
  },
  "components": [
    {
      "type": "button",
      "id": "abs-zero",
      "text": "Set to absolute zero",
      "action": "set({temperature: 0.00001});"
    },
    {
      "type": "button",
      "id": "add-heat",
      "text": "Add lots of heat",
      "action": [
                "var curTemp = get('temperature'), newTemp = curTemp + 2500;",
                "if (newTemp > 4000) {",
                "  newTemp = 4000;",
                "}",
                "set({temperature: newTemp});"
              ]
    },

    {
      "type": "button",
      "id": "log-model",
      "text": "Log value of model",
      "action": "console.log(model);"
    },

    {
      "type": "button",
      "id": "throw-error",
      "text": "Throw an error",
      "action": "x = 1;"
    },

    {
      "type": "pulldown",
      "id": "pulldown1",
      "options": [
        {
          "text": "Option 1",
          "action": "alert('You selected option 1!');"
        },
        {
          "text": "Option 2",
          "action": "alert('You selected option 2!');"
        }
      ]
    }
  ]
}