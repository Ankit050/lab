!!! 5
%html
  %head
    %meta{:content => "text/html;charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Simple Molecules
    %script{:src => "../vendor/modernizr.js", :type => "text/javascript"}
    %script{:src => "../vendor/d3/d3.js", :type => "text/javascript"}
    %script{:src => "../vendor/d3/d3.geo.js", :type => "text/javascript"}
    %script{:src => "../vendor/d3/d3.geom.js", :type => "text/javascript"}
    %script{:src => "../vendor/d3/d3.layout.js", :type => "text/javascript"}    
    %script{:src => "../vendor/d3/d3.time.js", :type => "text/javascript"}    
    %script{:src => "../vendor/science/science.js", :type => "text/javascript"}    
    %script{:src => "../vendor/science/science.stats.js", :type => "text/javascript"}    
    %link{:href => "../examples.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "simplemolecules.css", :rel => "stylesheet", :type => "text/css"}/
  %body
    #header
      %ul
        %li.title
          %a(href="http://lab.dev.concord.org/simplemolecules/simplemolecules.html") Simple Molecules
      %ul.right
        %li
          %img#fullscreen(class="alignleft size-full wp-image-1880" src="fullscreen.gif" width="32" height="32")
    #viz
      %ul
        %li
          #molecule-container
    #controls
      %ul
        %li
          %form(id="model-controls")
            %fieldset
              %legend Model
              %label
                %input(type="radio" name="step" value="stop" checked) Stop
              %label
                %input(type="radio" name="step" value="step"        ) Step
              %label
                %input(type="radio" name="step" value="go"          ) Go
              %label
                %input(type="radio" name="step" value="reset"       ) Reset
        %li
          %fieldset
            %legend Molecules
            %select(id="select-molecule-number")
              %option(value="2") 2
              %option(value="5") 5
              %option(value="10") 10
              %option(value="20" selected) 20
              %option(value="50") 50
              %option(value="100") 100
              %option(value="200") 200
              %option(value="500") 500
        %li
          %fieldset
            %legend Temperature Control
            %input(id="temperature-control-checkbox" type="checkbox" checked)
            %select(id="select-temperature")
              %option(value="10") 10
              %option(value="9") 9
              %option(value="8") 8
              %option(value="7") 7
              %option(value="6") 6
              %option(value="5") 5
              %option(value="4" selected) 4
              %option(value="3") 3
              %option(value="2") 2
              %option(value="1") 1
              %option(value="0") 0
        %li
          %fieldset
            %legend Particle Force Interactions
            %label 
              Lennard-Jones
              %input(id="lennard-jones-forces-checkbox" type="checkbox" checked)
            %label
              Coulomb
              %input(id="coulomb-forces-checkbox" type="checkbox" checked)
        %br
        %ul
          %li
            %fieldset#stats-container
              %legend Stats
              %pre#stats

    %script{:src => "../lib/lab.layout.js", :type => "text/javascript"}
    %script{:src => "../lib/lab.benchmark.js", :type => "text/javascript"}
    %script{:src => "../lib/lab.arrays.js", :type => "text/javascript"}
    %script{:src => "../lib/lab.graphx.js", :type => "text/javascript"}
    %script{:src => "../lib/lab.molecules.js", :type => "text/javascript"}
    %script{:src => "simplemolecules.js", :type => "text/javascript"}
