{
  "title": "Sensor",
  "publicationStatus": "draft",
  "subtitle": "Testing the Sensor model type",
  "about": "",
  "models": [
    {
      "type": "sensor",
      "id": "signal1",
      "url": "models/sensor/sensor.json",
      "viewOptions": {
        "controlButtons": "reset",
        "controlButtonStyle": "text",
        "showClock": true
      },
      "onLoad": [
        "function setGraphRange() {",
        "  syncAxisRangesToPropertyRanges('propertiesGraph');",
        "}",
        "function setButtonState() {",
        "  setComponentDisabled('start-button', !get('isPlayable'));",
        "  setComponentDisabled('stop-button', get('isStopped'));",
        "  setComponentDisabled('new-run-button', !get('hasPlayed'));",
        "  setComponentDisabled('analyze-data-button', !(get('hasPlayed') && get('isStopped') && canExportData()))",
        "}",
        "onPropertyChange('isPlayable', setButtonState);",
        "onPropertyChange('isStopped', setButtonState);",
        "onPropertyChange('hasPlayed', setButtonState);",
        "setButtonState();",
        "onPropertyChange('sensorType', function() {",
        "  if (get('sensorType') && !get('isNewRunInProgress')) {",
        "    setGraphRange();",
        "    setComponentDisabled('start-button', false);",
        "  }",
        "});",
        "callEvery(1, function() {",
        "   var experimentTime = getTime() - get('experimentStartTime');",
        "   if (experimentTime > get('collectionTime')) {",
        "     stop();",
        "     setComponentDisabled('start-button',true);",
        "   }",
        "});",
        "onPropertyChange('collectionTime', setGraphRange);",
        "setGraphRange();"
      ]
    }
  ],
  "parameters": [
    {
      "name": "isNewRunInProgress",
      "initialValue": false
    },
    {
      "name": "experimentStartTime",
      "initialValue": 0
    },
    {
      "name": "experimentDuration",
      "initialValue": 5,
      "onChange": "set('collectionTime', value);"
    }
 ],
  "hideExportDataControl": true,
  "components": [
    {
      "type": "graph",
      "id": "propertiesGraph",
      "title": "Sensor Reading",
      "xlabel": "Time (s)",
      "ymin": 0,
      "ymax": 6,
      "xmax": 30,
      "xTickCount": 6,
      "xFormatter": ".2s",
      "yFormatter": ".2s",
      "properties": [
        "sensorReading"
      ],
      "resetAxesOnReset": false
    },
    {
      "type": "slider",
      "id": "duration-slider",
      "min": 1,
      "max": 10,
      "displayValue": "return format('.1f')(value)",
      "labels": [
        {
          "value": 1,
          "label": "1"
        },
        {
          "value": 10,
          "label": "10"
        }
      ],
      "steps": 9,
      "width": "10em",
      "title": "Duration of Exp. (s)",
      "property": "experimentDuration"
    },
    {
      "type": "button",
      "id": "start-button",
      "text": "Start",
      "tooltip": "Start the experiment run.",
      "action": "start();"
    },
    {
      "type": "button",
      "id": "stop-button",
      "text": "Stop",
      "tooltip": "Stop the experiment run.",
      "action": "stop();"
    },
    {
      "type": "button",
      "id": "new-run-button",
      "text": "New Run",
      "tooltip": "Set up a new experiment run.",
      "action": [
        "var tareValue = get('tareValue');",
        "set('isNewRunInProgress', true);",
        "reset({",
        "  retainParameters: ['sensorType','experimentDuration'],",
        "  cause: 'new-run'",
        "});",
        "set('tareValue', tareValue);",
        "scrollXAxisToZero('propertiesGraph');",
        "set('isNewRunInProgress', false);"
      ]
    },
    {
      "type": "button",
      "id": "analyze-data-button",
      "text": "Analyze Data",
      "tooltip": "Put data from the experiment run into DataGames.",
      "action": "exportData();"
    }
  ],
  "layout": {
    "below-model": [
      "propertiesGraph"
    ],
    "container-bottom": [
      "start-button",
      "stop-button",
      "analyze-data-button",
      "new-run-button",
      "duration-slider"
    ]
  },
  "exports": {
    "perRun": ["sensorType"],
    "perTick": ["sensorReading"]
  },
  "template": [
    {
      "id": "below-model",
      "top": "model.bottom",
      "padding-top": "0.3em",
      "bottom": "container-bottom.top",
      "padding-bottom": "2em",
      "width": "interactive.width",
      "padding-right": "1em"
    },
    {
      "id": "model-left",
      "top": "model.top",
      "right": "model.left",
      "padding-right": "0.5em"
    },
    {
      "id": "container-bottom",
      "width": "below-model.width",
      "bottom": "interactive.bottom"
    }
  ]
}