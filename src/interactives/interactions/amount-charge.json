{
  "title": "Charge Intensity and Electric Field Force Magnitude",
  "publicationStatus": "draft",
  "subtitle": "Manipulate the charge on objects to explore the relationship between the electric field around objects and the forces on objects.",
  "about": [
    "Control the amount of chrage on two objects an observe how it affects ",
    "(1) the electric fields around the charged objects and ",
    "(2) the strength and direction of the forces acting between the two objects.",
    "Turn the force and electric field visualizations on and off to see their interactions."
  ],
  "models": [
    {
      "type": "md2d",
      "id": "amount-charge$0",
      "url": "imports/legacy-mw-content/converted/interactions/charge-intensity-and-force/amount-charge$0.json",
      "importedFrom": "imports/legacy-mw-content/interactions/charge-intensity-and-force/amount-charge$0.mml",
      "viewOptions": {
        "controlButtons": ""
      },
      "onLoad": [
        "set('showElectricField',false);",
        "set('left-particle-charge',2);",
        "set('right-particle-charge',-2);"
      ]
    }
  ],
  "parameters": [
    {
      "name": "left-particle-charge",
      "initialValue": 0,
      "onChange": "setAtomProperties(1,{charge: value});"
    },
    {
      "name": "right-particle-charge",
      "initialValue": 0,
      "onChange": "setAtomProperties(0,{charge: value});"
    }
  ],
  "components": [
    {
      "type": "slider",
      "id": "set-left-particle-charge",
      "property": "left-particle-charge",
      "min": -3,
      "max": 3,
      "steps": 6,
      "title": "Left Particle",
      "displayValue": "return format('d')(value)",
      "labels": [
        {
          "value": -3,
          "label": "-3"
        },
        {
          "value": 0,
          "label": "0"
        },
        {
          "value": 3,
          "label": "3"
        }
      ]
    },
    {
      "type": "slider",
      "id": "set-right-particle-charge",
      "property": "right-particle-charge",
      "min": -3,
      "max": 3,
      "steps": 6,
      "title": "Right Particle",
      "displayValue": "return format('d')(value)",
      "labels": [
        {
          "value": -3,
          "label": "-3"
        },
        {
          "value": 0,
          "label": "0"
        },
        {
          "value": 3,
          "label": "3"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "select-show-forces",
      "property": "showForceVectors",
      "text": "Show forces"
    },
    {
      "type": "checkbox",
      "id": "select-show-electric-field",
      "property": "showElectricField",
      "text": "Show electric field"
    }
  ],
  "template": [
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom",
      "width": "model.width",
      "align": "center"
    }
  ],
  "layout": {
    "bottom": [
      ["set-left-particle-charge", "set-right-particle-charge"],
      ["select-show-forces", "select-show-electric-field"]
    ]
  }
}
