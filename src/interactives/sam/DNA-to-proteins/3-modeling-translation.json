{
  "title": "Modeling Translation",
  "publicationStatus": "public",
  "subtitle": "",
  "about": [
    "Use this model to see how different tRNA molecules, each carrying a specific amino acid, use the mRNA strand to create a specific protein (or chain of amino acids)."
  ],
  "fontScale": 0.8,
  "models": [
    {
      "id": "page3$0",
      "url": "imports/legacy-mw-content/converted/sam-activities/DNA-to-proteins/page3/page3$0.json",
      "viewOptions": {
        "controlButtons": "",
        "enableKeyboardHandlers": false
      },
      "modelOptions": {
        "DNA": "ATGCCAGGCGGCGAGAGCTTGCTAATTGGCTTATAG",
        "DNAState": "translation:0"
      }
    }
  ],
  "components": [
    {
      "type": "button",
      "id": "translate",
      "text": "Translate",
      "action": [
        "if (get('DNAState') === 'translation-end') set('DNAState', 'translation:0');",
        "animateToDNAState('translation-end');"
      ]
    },
    {
      "type": "button",
      "id": "translate-step",
      "text": "Translate step by step",
      "action": "translateDNAStep();"
    },
    {
      "type": "text",
      "id": "label3",
      "text": "Click"
    },
    {
      "type": "text",
      "id": "label4",
      "text": "to generate protein from mRNA or"
    },
    {
      "type": "button",
      "id": "start",
      "text": "Start/continue model",
      "action": [
        "if (DNAStateBefore('translation-end')) animateToDNAState('translation-end');",
        "else start();"
      ]
    },
    {
      "type": "button",
      "id": "stop",
      "text": "Stop",
      "action": [
        "if (DNAStateBefore('translation-end')) stopDNAAnimation();",
        "else stop();"
      ]
    },
    {
      "type": "button",
      "id": "reset",
      "text": "Reset",
      "action": "reset();"
    }
  ],
  "layout": {
    "model-bottom": [
      ["label3", "translate", "label4", "translate-step"],
      ["start", "stop", "reset"]
    ]
  },
  "template": [
    {
      "id": "model-bottom",
      "left": "model.left",
      "top": "model.bottom",
      "width": "model.width",
      "align": "center"
    }
  ]
}