{
  "title": "Quantum collision",
  "publicationStatus": "public",
  "subtitle": "",
  "about": "",
  "models": [
    {
      "id": "quantum-collision",
      "url": "/imports/legacy-mw-content/converted/conversion-and-physics-examples/quantum-collision.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "showClock": true
      },
      "onLoad": [
        "onPropertyChange('initialVelocity', function(){",
        " var vx = get('initialVelocity'); reset(); ",
        " setAtomProperties(1, {vx: vx});",
        " setTextBoxProperties(0,{text: 'initial speed= '+vx*10e5+' m/s'});",
        "});"
      ]
    }
  ],
  "parameters": [
    {
      "name": "initialVelocity",
      "unitType": "velocity",
      "onChange": "setAtomProperties(1, {vx: value});",
      "initialValue": 0.0005
    }
  ],
  "components": [
    {
      "type": "slider",
      "id": "v-slider",
      "min": 0.0005,
      "max": 0.005,
      "labels": [
        {
          "value": 0.0005,
          "label": "slow"
        },
        {
          "value": 0.005,
          "label": "fast"
        }
      ],
      "steps": 30,
      "title": "Starting velocity",
      "property": "initialVelocity"
    },
    {
      "type": "graph",
      "id": "graph",
      "title": "Total Energy of the System",
      "xlabel": "Model Time (fs)",
      "ylabel": "eV",
      "ymin": 0,
      "ymax": 7,
      "xmax": 6000,
      "xTickCount": 5,
      "yTickCount": 5,
      "xFormatter": "2s",
      "yFormatter": "2s",
      "properties": [
        "kineticEnergy"
      ]
    }
  ],
  "layout": {
    "right": [
      "graph"
    ]
  },
  "template": [
    {
      "id": "right",
      "top": "model.top",
      "left": "model.right",
      "height": "model.height",
      "padding-left": "1em",
      "padding-right": "0.5em",
      "width": "model.width",
      "min-width": "6em"
    },
    {
      "id": "bottom",
      "top": "model.bottom",
      "left": "model.left",
      "width": "model.width",
      "padding-top": "0.5em",
      "align": "center"
    }
  ]
}