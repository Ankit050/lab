{
  "title": "Amount of Charge",
  "publicationStatus": "public",
  "subtitle": "Test for smooth charge shading",
  "about": "",
  "models": [
    {
      "type": "md2d",
      "id": "mark-atoms$0",
      "url": "imports/legacy-mw-content/converted/conversion-and-physics-examples/amount-charge$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "showElectricField": true
      }
    }
  ],
  "parameters":[
    {
      "name": "chargeLeft",
      "label": "Left Atom Charge",
      "unitAbbreviation": "",
      "onChange": "setAtomProperties(1, {charge:value});",
      "initialValue": -2
    },
    {
      "name": "chargeRight",
      "label": "Right Atom Charge",
      "unitAbbreviation": "",
      "onChange": "setAtomProperties(0, {charge:value});",
      "initialValue": 2
    }
  ],
  "components":[
    {
      "type": "slider",
      "id": "left-slider",
      "min": -3,
      "max": 3,
      "displayValue": "return format('1.1f')(value)",
      "labels": [
      {
        "value": -3,
        "label": "-3"
      },
      {
        "value": 3.0,
        "label": "3"
      }
      ],
      "steps": 12,
      "title": "Left Atom Charge",
      "property": "chargeLeft"
    },
    {
      "type": "slider",
      "id": "right-slider",
      "min": -3,
      "max": 3,
      "displayValue": "return format('1.1f')(value)",
      "labels": [
      {
        "value": -3,
        "label": "-3"
      },
      {
        "value": 3.0,
        "label": "3"
      }
      ],
      "steps": 12,
      "title": "Right Atom Charge",
      "property": "chargeRight"
    },
    {
      "type": "checkbox",
      "id": "force-vectors",
      "text": "Show forces",
      "property": "showForceVectors"
    },
    {
      "type": "slider",
      "id": "electric-field-density-slider",
      "min": 0,
      "max": 20,
      "displayValue": "return format('1f')(value)",
      "labels": [
        {
          "value": 0,
          "label": "0"
        },
        {
          "value": 20,
          "label": "20"
        }
      ],
      "steps": 20,
      "title": "Electric field density",
      "property": "electricFieldDensity"
    },
    {
      "type": "checkbox",
      "id": "show-electric-field",
      "text": "Show electric field",
      "property": "showElectricField"
    }
  ],
  "layout": {
    "bottom": ["left-slider", "right-slider"],
    "bottom2": ["force-vectors", "show-electric-field", "electric-field-density-slider"]
  },
  "template": [
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom",
      "padding-top": "0.5em",
      "width": "model.width",
      "align": "center"
    },
    {
      "id": "bottom2",
      "left": "model.left",
      "top": "bottom.bottom",
      "width": "interactive.width"
    }
  ]
}