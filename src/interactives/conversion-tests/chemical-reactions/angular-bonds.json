{
  "title": "Angular Bonds",
  "publicationStatus": "public",
  "subtitle": "",
  "about": "",
  "models": [
    {
      "type": "md2d",
      "id": "model1",
      "onLoad": [
        "for(var i = 0; i < 30; i++) addRandomAtom(i % 2);"
      ],
      "model": {
        "useChemicalReactions": true,
        "targetTemperature": 4000,
        "chemicalReactions": {
          "valenceElectrons": [
            1,
            6,
            4
          ],
          "bondEnergy": {
            "0-0": 0.01,
            "0=0": 0.01,
            "1-1": 0.01,
            "1=1": 0.01,
            "0-1": 0.01,
            "0-2": 10,
            "0=2": 10,
            "1-2": 10,
            "1=2": 10
          }
        },
        "timeStep": 0.5,
        "width": 10,
        "height": 6,
        "atoms": {
          "x": [
            4
          ],
          "y": [
            2
          ],
          "vx": [
            0.001
          ],
          "vy": [
            0.001
          ],
          "element": [
            2
          ]
        },
        "elements": {
          "mass": [
            120,
            24,
            36
          ],
          "sigma": [
            0.30,
            0.37,
            0.50
          ],
          "epsilon": [
            -0.1,
            -0.1,
            -0.1
          ],
          "color": [
            -13159,
            -9066941,
            -9092186
          ]
        }
      },
      "viewOptions": {
        "controlButtons": "play_reset"
      }
    }
  ],
  "parameters": [
    {
      "name": "yellowAtomsValence",
      "initialValue": 1,
      "onChange": "setValenceElectrons(0, value);"
    },
    {
      "name": "greenAtomsValence",
      "initialValue": 6,
      "onChange": "setValenceElectrons(1, value);"
    },
    {
      "name": "purpleAtomsValence",
      "initialValue": 4,
      "onChange": "setValenceElectrons(2, value);"
    }
  ],
  "components": [
    {
      "type": "text",
      "id": "label",
      "text": "Valence electrons count:"
    },
    {
      "type": "slider",
      "id": "yellow-slider",
      "property": "yellowAtomsValence",
      "min": 1,
      "max": 8,
      "steps": 7,
      "title": "yellow atoms",
      "displayValue": "return value"
    },
    {
      "type": "slider",
      "id": "green-slider",
      "property": "greenAtomsValence",
      "min": 1,
      "max": 8,
      "steps": 7,
      "title": "green atoms",
      "displayValue": "return value"
    },
    {
      "type": "slider",
      "id": "pruple-slider",
      "property": "purpleAtomsValence",
      "min": 1,
      "max": 8,
      "steps": 7,
      "title": "purple atoms",
      "displayValue": "return value"
    },
    {
      "type": "graph",
      "id": "energy-graph",
      "title": "Energy (KE:red, PE:green, TE:blue)",
      "xlabel": "Time (ps)",
      "ylabel": "Energy (eV)",
      "ymin": -8,
      "ymax": 8,
      "xmax": 20,
      "xTickCount": 10,
      "yTickCount": 10,
      "xFormatter": ".2r",
      "yFormatter": ".2s",
      "properties": [
        "kineticEnergy",
        "potentialEnergy",
        "totalEnergy"
      ]
    }
  ],
  "template": [
    {
      "id": "right",
      "top": "model.top",
      "left": "model.right",
      "padding-left": "1em"
    },
    {
      "id": "left",
      "top": "model.top",
      "right": "model.left",
      "padding-left": "3em"
    },
    {
      "id": "bottom",
      "top": "right.bottom",
      "width": "interactive.width",
      "bottom": "interactive.bottom",
      "padding-top": "0.5em"
    }
  ],
  "layout": {
    "bottom": [
      "energy-graph"
    ],
    "right": [
      ["label"],
      ["yellow-slider"],
      ["green-slider"],
      ["pruple-slider"]
    ]
  }
}
